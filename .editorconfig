# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{json}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{md,toml,yaml,yml}]
indent_size = 2
indent_style = space
insert_final_newline = true

[*.{py,pyi}]
indent_size = 4
indent_style = space
insert_final_newline = true